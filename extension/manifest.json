{
  "manifest_version": 3,
  "name": "AI Studio Prompt Library",
  "short_name": "System Prompts",
  "description": "Supercharge your workflow in Google AI Studio. Manage and instantly insert your favorite system prompts without leaving the page.",
  "version": "0.2",
  "homepage_url": "https://github.com/ham-zax/ai-studio-prompt-library",
  "icons": {
    "16": "extension/icons/icon-16.png",
    "32": "extension/icons/icon-32.png",
    "48": "extension/icons/icon-48.png",
    "128": "extension/icons/icon-128.png"
  },
  "action": {
    "default_popup": "extension/src/popup/index.html",
    "default_title": "AI Studio Prompt Library",
    "default_icon": {
      "16": "extension/icons/icon-16.png",
      "32": "extension/icons/icon-32.png",
      "48": "extension/icons/icon-48.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "service_worker": "extension/src/background/index.ts",
    "type": "module"
  },
  "options_page": "extension/src/options/index.html",
  "content_scripts": [
    {
      "matches": ["https://aistudio.google.com/*"],
      "js": ["extension/src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "open_palette": {
      "suggested_key": { "default": "Alt+Shift+1", "mac": "Alt+Shift+1" },
      "description": "Open system prompts popup"
    },
    "insert_last_prompt": {
      "suggested_key": { "default": "Alt+Shift+2", "mac": "Alt+Shift+2" },
      "description": "Insert last used prompt"
    }
  }
}
